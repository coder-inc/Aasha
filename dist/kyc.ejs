    <style>
      body{
            background-color: lavenderblush;
        }

        .cont{
            background-color: white;
            height: 650px;
            width: 1100px;
            padding: 25px;
        }

        .cont-2{
            margin-top: 290px;
        }

        .dupn{
          text-align: center;
          margin-top: 60px;
        }

        .card{
          margin-left: 210px;
          border-radius: 15px;
          height: 250px;
        }

        .dupn-1{
          border: none;
          width: 90px;
          height: 50px;
        }

        .dupn :hover{
          background-color: #002927;
          color: lavenderblush;
        }

        .dum-2{
          border-radius: 5px;
          margin-left: 2px;
        }

        .dum-1{
          width: 250px;
          margin-left: 18px;
          margin-top: 10px;
        }
        
        .fost-7{
            font-family: "Playfair Display";
        }

        .fost-8{
            font-family: "Roboto";
            font-weight: 800;
        }

    </style>
